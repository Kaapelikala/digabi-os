#!/bin/sh

set -e

VERSION_LONG="$(git describe --tags --long)"
VERSION_SHORT="$(echo $VERSION_LONG |cut -d- -f1 |cut -dv -f2)"
VERSION="${VERSION_SHORT}"

FILE="config/includes.chroot/etc/os-release"

if [ -f "${FILE}" ]
then
    echo "I: Updating /etc/os-release for version ${VERSION}..."
    # TODO
else
    echo "W: File not found: ${FILE}, will not update /etc/os-release for version ${VERSION}!"
fi

