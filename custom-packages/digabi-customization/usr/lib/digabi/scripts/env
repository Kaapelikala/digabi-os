#!/bin/sh

set -e

COMMAND="$1"

usage() {
    echo "Usage: $0 <command>"
}

if [ -z "${COMMAND}" ]
then
    echo "E: Missing command."
    usage
    exit 1
fi

case "${COMMAND}" in
    keyb*)
        LANG="${2}"
        setxkbmap "${LANG}"
        ;;
    *)
        echo "E: Invalid command (${COMMAND})."
        exit 1
        ;;
esac
