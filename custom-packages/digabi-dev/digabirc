DIGABI_MISC_REPOSITORY_URL="${DIGABI_REPOSITORY_BASE_URL}/digabi-misc"
DIGABI_REPO_REPOSITORY_URL="${DIGABI_REPOSITORY_BASE_URL}/digabi-repository"
