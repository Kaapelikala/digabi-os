#!/bin/sh

set -e

CUR_DIR="$(dirname $0)"
VERSION="$(${CUR_DIR}/../../scripts/version.helper)"

FILE="${CUR_DIR}/../includes.chroot/var/lib/digabi/version"
VDIR="$(dirname ${FILE})"

if [ ! -d "${VDIR}" ]
then
	mkdir -p "${VDIR}"
fi

echo "I: Updating version number: /var/lib/digabi/version..."
echo ${VERSION} >"${FILE}"
