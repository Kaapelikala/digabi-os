menu background splash.png

menu hshift 0
menu vshift 4

menu color title    * #FFFFFFFF *
menu color border   * #00000000 #00000000 none
menu color sel      * #ffffffff #76a1d0ff *
menu color hotsel   1;7;37;40 #ffffffff #76a1d0ff *
menu color tabmsg   * #ffffffff #00000000 *
menu color help     37;40 #ffffff00 #00000000 none

menu width 82
menu rows 5

menu helpmsgrow 7
menu cmdlinerow 16
menu timeoutrow 16
menu tabmsgrow 18


menu title Digabi OS

label ktp
    menu label ^Koetilapalvelin / Provlokalens server
    menu default

    linux @LINUX@
    initrd @INITRD@
    append @APPEND_LIVE@ quiet splash ip=eth0:10.10.0.1:255.255.0.0 hostname=ktp1.local persistence

label supo
    menu label ^Lisavalvontakonsoli / Ytterligare kontrolkonsol

    linux @LINUX@
    initrd @INITRD@
    append @APPEND_LIVE@ quiet splash systemd.unit=remote-supo


menu tabmsg Press ENTER to boot
menu clear
