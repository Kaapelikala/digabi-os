#!/bin/sh

set -e

HOMEPAGE="http://localhost/supo/index.html"
USB_MOUNT="/media/usb2"
CONFIG_FILE="/etc/iceweasel/profile/prefs.js"

if [ ! -d "/etc/iceweasel/profile" ]
then
    mkdir -p /etc/iceweasel/profile
fi

cat > ${CONFIG_FILE} << EOF
user_pref("browser.open.lastDir", "${USB_MOUNT}");
user_pref("browser.download.lastDir", "${USB_MOUNT}");
user_pref("browser.download.useDownloadDir", false);
user_pref("browser.startup.homepage", "${HOMEPAGE}");
EOF
