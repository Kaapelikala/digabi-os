#!/bin/sh
set -e

TARGET_FILE="config/includes.chroot/var/lib/digabi/build"
TARGET_DIR="$(dirname ${TARGET_FILE})"

if [ ! -d "${TARGET_DIR}" ]
then
    mkdir -p "${TARGET_DIR}"
fi

GIT_COMMIT="$(git rev-parse HEAD)"

echo "Build-Tag: ${BUILD_TAG}" >>${TARGET_FILE}
echo "Build-Git-Commit: ${GIT_COMMIT}" >>${TARGET_FILE}
