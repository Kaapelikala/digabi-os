#!/bin/sh
if [ -n "${DIGABI_DEBUG}" ] ; then set -x  ; fi
set -e

BACKGROUND_FILE="/usr/share/digabi/proprietary/background.svg"

if [ -w "${BACKGROUND_FILE}" ]
then
    echo "I: Adding version number to background..."
    sed -i "s/@VERSION@/$(digabi version)/g" "${BACKGROUND_FILE}"
else
    echo "W: Background not found, not adding version number."
fi
