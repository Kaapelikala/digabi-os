#!/bin/sh

set -e

# Change user default password

MKPASSWD="/usr/bin/mkpasswd"

if [ ! -x "${MKPASSWD}" ]
then
    echo "W: mkpasswd not found, not customizing user password."
    exit 0
fi

CONFIG_FILE="/lib/live/config/0030-user-setup"
NEW_PASSWORD="$(echo 'digabi' |mkpasswd -s)"

if [ -w "${CONFIG_FILE}" ]
then
    echo "I: Customizing user default password..."
    sed -ri "s,_PASSWORD=(.*)/_PASSWORD='${NEW_PASSWORD}'/g" "${CONFIG_FILE}"
fi
